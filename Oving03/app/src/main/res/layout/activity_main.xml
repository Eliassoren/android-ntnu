<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eliasbrattli.ovinger.oving03.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:layout_gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legg til i kontaktliste"
                android:id="@+id/txtInfo"
                android:enabled="true"
                android:editable="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Navn"
                android:ems="10"
                android:id="@+id/nameInputField"
                android:layout_below="@+id/txtInfo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/dateInputField"
                android:layout_below="@+id/nameInputField"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="FÃ¸dselsdato" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lagre"
                android:id="@+id/saveButton"
                android:layout_below="@+id/nameInputField"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:text="Kontakter" />

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="268dp"
            android:orientation="vertical"
            android:id="@+id/contactListView"
            android:descendantFocusability="blocksDescendants"
            android:layout_weight="1.51" />

    </LinearLayout>
</RelativeLayout>
